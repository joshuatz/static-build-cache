{
	"name": "glitch-static-cache",
	"version": "1.0.0",
	"description": "Cache your static builds on Glitch to avoid startup times",
	"main": "dist/main.js",
	"bin": {
		"glitch-cache": "dist/cli.js"
	},
	"repository": {
		"type": "git",
		"url": "@TODO"
	},
	"license": "MIT",
	"author": "Joshua Tzucker",
	"homepage": "@TODO",
	"keywords": [
		"glitch cache",
		"glitch startup",
		"glitch.com"
	],
	"scripts": {
		"dev": "yarn clean && nodemon -e js,ts --ignore dist --exec \"tsc --sourceMap && yalc push --changed\"",
		"clean": "shx rm -rf dist && shx mkdir dist",
		"build": "yarn clean && tsc",
		"build-local": "yarn clean && tsc --sourceMap && yalc push",
		"build-zip": "yarn build && npm pack",
		"format": "yarn prettier --check src",
		"test": "ava '__tests__/**/*.test.*'",
		"list-files": "yalc publish --files"
	},
	"dependencies": {
		"commander": "^6.0.0",
		"detect-is-on-glitch": "^1.0.0",
		"local-web-server": "^4.2.1"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.1",
		"@types/node": "^14.0.23",
		"ava": "^3.11.1",
		"fs-extra": "^9.0.1",
		"node-fetch": "^2.6.0",
		"nodemon": "^2.0.4",
		"prettier": "2.0.5",
		"shx": "^0.3.2",
		"ts-node": "^8.10.2",
		"type-fest": "^0.16.0",
		"typescript": "^3.9.7"
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register/transpile-only"
		]
	}
}
