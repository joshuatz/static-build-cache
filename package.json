{
	"name": "glitch-static-cache",
	"version": "1.0.0",
	"description": "Cache your static builds on Glitch to avoid startup times",
	"main": "dist/main.js",
	"bin": {
		"glitch-cache": "dist/cli.js"
	},
	"repository": {
		"type": "git",
		"url": "@TODO"
	},
	"license": "MIT",
	"author": "Joshua Tzucker",
	"homepage": "@TODO",
	"keywords": [
		"glitch cache",
		"glitch startup",
		"glitch.com"
	],
	"scripts": {
		"dev": "yarn clean && nodemon -e js,ts --ignore dist --exec \"tsc --sourceMap && yalc push --changed\"",
		"dev-two": "yarn clean && nodemon -e js,ts --ignore dist --exec \"tsc --sourceMap --sourceRoot src && yalc push --changed\"",
		"clean": "shx rm -rf dist && shx mkdir dist",
		"build": "yarn clean && tsc",
		"format": "yarn prettier --check src",
		"test": "echo 'no tests yet :('",
		"scratch": "SET GLITCH_SHARED_INCLUDES_LEGACY_CLS=\"true\" && ts-node --transpile-only src/cli.ts -p ./dist && echo 'exited!'",
		"scratch-js": "SET GLITCH_SHARED_INCLUDES_LEGACY_CLS=\"true\" && node --inspect-brk test.js",
		"local-publish": "yarn build && yalc push",
		"list-files": "yalc publish --files"
	},
	"dependencies": {
		"commander": "^6.0.0",
		"detect-is-on-glitch": "^1.0.0",
		"serve": "^11.3.2"
	},
	"devDependencies": {
		"@types/node": "^14.0.23",
		"nodemon": "^2.0.4",
		"prettier": "2.0.5",
		"shx": "^0.3.2",
		"type-fest": "^0.16.0",
		"typescript": "^3.9.7"
	}
}
